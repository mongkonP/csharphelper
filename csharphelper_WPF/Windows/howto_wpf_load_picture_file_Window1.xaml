<Window x:Class="csharphelper.Windows_Cs.howto_wpf_load_picture_file_Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="howto_wpf_load_picture_file"
    Height="300" Width="400">
    <StackPanel Margin="5">
        <Button Name="btnBrowse" ToolTip="Browse for file" Click="btnBrowse_Click"  
            VerticalAlignment="Top" HorizontalAlignment="Left">
            <Image Source="/howto_wpf_load_picture_file;component/Ellipsis.png"
                Stretch="None"/>
        </Button>
        <Image Name="imgPicture" Stretch="None" Margin="0,5,0,0"/> 
    </StackPanel>
</Window>
