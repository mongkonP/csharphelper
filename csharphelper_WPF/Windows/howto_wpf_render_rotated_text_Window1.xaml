<Window x:Class="csharphelper.Windows_Cs.howto_wpf_render_rotated_text_Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="howto_wpf_render_rotated_text"
    Height="350" Width="375"
    Background="Transparent">
    <Grid>
        <StackPanel Orientation="Horizontal"
            VerticalAlignment="Top" Margin="5"
            Width="Auto" Height="Auto">
            <Label Content="TextAlign:"/>
            <ComboBox Name="cboTextAlign" Width="80" SelectedIndex="1"
                SelectionChanged="cboTextAlign_SelectionChanged">
                <ComboBox.Items>
                    <Label Content="Left"/>
                    <Label Content="Center"/>
                    <Label Content="Right"/>
                    <Label Content="Justify"/>
                </ComboBox.Items>
            </ComboBox>

            <Label Width="20"/>
            <Label Content="Angle:"/>
            <TextBox Name="txtAngle" Width="40" TextAlignment="Right"
                TextChanged="txtAngle_TextChanged">45</TextBox>
        </StackPanel>
    </Grid>
</Window>