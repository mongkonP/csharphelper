<Window x:Class="csharphelper.Windows_Cs.howto_wpf_add_tabs_Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="howto_wpf_add_tabs"
    Height="200" Width="350">
    <Grid>
        <TabControl Name="tabMain" >
            <TabItem Name="tabItem1">
                <TabItem.Header>
                    <Label Content="Tab 1"/>
                </TabItem.Header>
                <Label Background="LightGreen"
                    Content="This is the content on tab 1"/>
            </TabItem>
            <TabItem Name="tabItem2">
                <TabItem.Header>
                    <Label Content="Tab 2"/>
                </TabItem.Header>
                <Label Background="LightBlue"
                    Content="This is the content on tab 2"/>
            </TabItem>
        </TabControl>
        
        <Button Name="btnAdd" Content="+" Click="btnAdd_Click"
            HorizontalAlignment="Right" VerticalAlignment="Top"/>
    </Grid>
</Window>
